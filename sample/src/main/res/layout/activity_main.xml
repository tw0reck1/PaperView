<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <tw0reck1.paperview.SketchyPaperView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        app:pv_paper_color="#f0f0f0"
        app:pv_stroke_spacing="44dp"
        app:pv_stroke_type="horizontal"
        app:spv_sketch_stroke_width="3dp"
        app:spv_sketch_stroke_color="#009"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal">

        <tw0reck1.paperview.PaperView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            app:pv_paper_color="#7fcccc00"
            app:pv_border_width="0dp"
            app:pv_border_color="#cc0"
            app:pv_stroke_width="4dp"
            app:pv_stroke_color="#3fffffff"
            app:pv_stroke_spacing="33dp"
            app:pv_stroke_type="vertical"/>

        <tw0reck1.paperview.SketchyPaperView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            app:pv_paper_color="#333"
            app:pv_border_width="0dp"
            app:spv_sketch_stroke_width="4dp"
            app:spv_sketch_stroke_color="#fff"/>

    </LinearLayout>

    <tw0reck1.paperview.SketchyPaperView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        app:pv_paper_color="#5050c0"
        app:pv_border_width="4dp"
        app:pv_border_color="#3030a0"
        app:pv_stroke_color="#7fffffff"
        app:pv_stroke_spacing="16dp"
        app:pv_stroke_type="grid"
        app:spv_sketch_stroke_color="#ffff00"/>

</LinearLayout>